<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/profile.css">
</head>

<body>
    <div class="containerpens">
        <div class="cardpens">
            <div class="profile-picture">
                <img src="https://imgs.search.brave.com/ZRsylPB85AlMZzpXuVYppoSMKSBx-QU2o6dW8ORxcso/rs:fit:860:0:0/g:ce/aHR0cHM6Ly9pLnBp/bmltZy5jb20vb3Jp/Z2luYWxzLzdiLzEy/L2QyLzdiMTJkMjg3/MjIxYzBhZGY1YjRl/ZmNkZjMyNmMxNzhm/LmpwZw"
                    alt="Profile Picture">
            </div>
            <h2 class="name"><%= user.fullName %></h2>
            <h3 class="username">@<%= user.username %></h3>
            <p class="tagline">Keep going.</p>
            <p class="description">Lorem, ipsum dolor sit amet consectetur adipisicing.</p>
            <a href="/logout" class="button">log out</a>
            <form action="/upload" method="post" enctype="multipart/form-data">
                <input id="caption" type="text" name="filecaption">
                <label for="file">Post</label>
                <input id="file" type="file" name="file" style="width: 9%; padding: 0 10px; display: none;">
                <input id="upload" type="submit" value="upload">
            </form>
            
        </div>
    </div>
    <div class="container">
        <div class="cards" id="card">
            <% user.posts.forEach((post)=>{ %>
                <div class="card" style="width: 18rem;">
                    <img src="/images/uploads/<%= post.image %>"
                        class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><%= post.imageText %></h5>
                    </div>
                </div>
           <% }) %>
        </div>
    
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
        <script>

            document.querySelector("#file").addEventListener("click",()=>{
               setInterval(() => {
                document.querySelector("#caption").style.display = "block"
                document.querySelector("#upload").style.display = "block"
               }, 2000);
            })

            document.querySelector("#upload").addEventListener("click",()=>{
                document.querySelector("#caption").style.display = "none"
                document.querySelector("#upload").style.display = "none"
            })

        </script>
</body>

</html>